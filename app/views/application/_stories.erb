<div class="story-category-list">
  <div class="music-category">
   <div class="music-category-title">
     <h3>
       <%= link_to image_tag("music_news.png"), @music_category %>  <span class="hot-gist-image"><%= link_to image_tag("hot_gist.png"), @entertainment_category %></span>
     </h3>

   </div>
     <%= render latest_stories %>
  </div>
  <div class="club-artist">
<% if user_signed_in? %>
        <div class="music-category-title">
          <%= render 'users/featured', :user => User.featured_user[:user] %>
        </div>
<% else %>
    <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "well"}) do |f| %>
        <%= f.email_field :email, :class => "input-large flex-large", :placeholder => "Email" %>
        <table>
          <tbody>
          <tr>
            <td class="flex-table-primary">
              <%= f.password_field :password, :class => "input-small flex-small no-margin-bottom", :placeholder => "Password" %>
            </td>
            <td class="flex-table-primary"> <%= f.submit "Sign in", :class => "btn btn-success bold" %></td>
          </tr>
          </tbody>
        </table>
        <div class="actions-box">
          <%= f.check_box :remember_me %> <%= f.label :remember_me, :style => "display:inline; color:#ccc; font-size:11px;" %>
         <span class="shared-login-links"><%= link_to "Forgot your password?", new_password_path(resource_name), :class => "white" %></span>
        </div>
    <% end %>
    <div class="sign-up-form">
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "well"}) do |f| %>
          <div class="new-user-info"><span class="bold">New Hypejamz member?</span> Join Now</div>
          <%= f.text_field :name, :class => "input-large flex-large", :placeholder => "Brand Name(aka username)" %>
          <%= f.text_field :real_name, :class => "input-large flex-large", :placeholder => "Real Name" %>
          <%= f.email_field :email, :class => "input-large flex-large", :placeholder => "Email" %>
          <%= f.password_field :password, :class => "input-large flex-large", :placeholder => "Password", :style => "margin-bottom: 4px;" %>
          <div>
            <%= f.check_box :artist %> <%= f.label :artist, "Are you an artist", :style => "display:inline; color:#fff; font-size:11px; font-weight:bold;" %>
          </div>
          <%= f.submit "Join Hypejamz now", :class => "btn btn-info bold" %>
      <% end %>
    </div>
<% end %>
  </div>
 <div class="clear"></div>
</div>
