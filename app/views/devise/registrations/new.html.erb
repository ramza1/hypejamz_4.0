<% title "Sign Up", false %>

 <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "form-horizontal"}) do |f| %>
  <%= devise_error_messages! %>
 <fieldset>
   <legend>Join HypeJamz today <em>sign up now</em> for free!</legend>
   <div class="control-group">
     <%= f.label :name, "username", :class => "control-label"  %>
     <div class="controls">
       <%= f.text_field :name, :placeholder => "Username", :class => "input-xlarge"%>
     </div>
   </div>

   <div class="control-group">
     <%= f.label :real_name, "real name", :class => "control-label"  %>
     <div class="controls">
       <%= f.text_field :real_name, :placeholder => "Your Full Name", :class => "input-xlarge" %>
     </div>
   </div>

   <div class="control-group">
     <%= f.label :email, :class => "control-label"  %>
     <div class="controls">
       <%= f.email_field :email, :placeholder => "Email", :class => "input-xlarge" %>
     </div>
   </div>




   <div class="control-group">
     <%= f.label :password, :class => "control-label" %>
     <div class="controls">
       <%= f.password_field :password, :placeholder => "Password", :class => "input-xlarge" %>
     </div>
   </div>

   <p class="alert alert-warning">
       <%= link_to "Please read the Terms And Condition before signing up", terms_of_use_path, :target => "_blank" %>
   </p>

  </fieldset>

  <div class="form-actions"><%= f.submit "Sign up", :class => "btn btn-success", :confirm => "By clicking ok you have accepted the Terms And Condition" %> <%= render :partial => "devise/shared/links" %></div>
<% end %>




