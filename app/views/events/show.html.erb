
<div class="mp_wrapper">
<%= render "users/user_info", :user => @user %>
<div class="mp_content_wrapper">
  <div class="ajax-loader-box">
   <%= render "events/event_details"%>
 </div>
</div>


</div>

<script type="text/javascript ">
  $(function(){
      $('.play-me').live("click", function(){
         $('.player-box').slideDown();
      });
  });
</script>

<script type="text/javascript">
  jQuery(function(){
      jQuery("a[rel=photo_group]").fancybox({
                      'transitionIn'		: 'none',
                      'transitionOut'		: 'none',
                      'titlePosition' 	: 'over',
                      'titleFormat'		: function(title, currentArray, currentIndex, currentOpts) {
                          return '<span id="fancybox-title-over">Image ' + (currentIndex + 1) + ' / ' + currentArray.length + (title.length ? ' &nbsp; ' + title : '') + '</span>';
                      }
                  });

  })
</script>

<script type="text/javascript">
  $(function(){
    $('.remote-event-link').live("click", function(e){
      $('.ajax-loader-box').empty();
      $('.ajax-loader-box').html("<p class='small-loading'>loading....</p>");
      if (history && history.replaceState) {
        history.replaceState(null, document.title, this.href);
      }
      e.preventDefault();
    })
  })
</script>