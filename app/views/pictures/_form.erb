<%= form_for(@picture, :html => {:class => "form-horizontal"}) do |f| %>
  <% if @picture.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@picture.errors.count, "error") %> prohibited this picture from being saved:</h2>

      <ul>
      <% @picture.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<fieldset>
  <div class="control-group">
    <%= f.label :caption, "About this photo", :class => "control-label" %>
    <div class="controls">
     <%= f.text_area :caption, :rows => 3, :placeholder => "Write about this picture", :class => "input-xlarge" %>
    </div>
  </div>
    <div class="control-group">
      <%= f.label :photo, "select photo to upload", :class => "control-label" %>
      <div class="controls">
        <%= f.file_field :photo %>
      </div>
    </div>
  <div class="form-actions">
    <%= f.submit @picture.new_record? ? "Upload photo" : "Edit photo details", :class => "btn" %>
    <%= link_to :back, :class => "btn btn-danger" do %>
        <i class="icon-remove-sign"></i> <%= t("user.cancel") %>
    <% end %>
  </div>
</fieldset>

<% end %>
