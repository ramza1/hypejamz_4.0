<%= div_for picture do %>
             <a href="<%= image_path(picture.photo(:big).to_s) %>" title="<%= picture.caption %>" rel="photo_group" class="image-thumb transition_border"><%= image_tag(picture.photo(:small)) %></a>

    <% if can? :update, picture %>
        <div class="picture-icons">
               <%= link_to image_tag("x.png"), picture, :method => :delete, :confirm => "Are you sure you want to delete this picture", :class => "wes", :title => "delete", :remote => true %>
               <%= link_to image_tag("writing.png"), edit_picture_path(picture), :class => "wes", :title => "edit" %>
        </div>
            <% end %>
<% end %>



