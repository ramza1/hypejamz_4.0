<%= provide :title, "African Songs"%>
<%= provide(:right_nav) do %>
    <% if @user %>
        <%= render "thumbnail_medium", :user => @user %>
    <% else %>
        <% if current_user %>
            <%= render "thumbnail_medium", :user => current_user %>
        <% else %>
            <%= render "not_member" %>
        <% end %>
    <% end %>
    <hr>
    <%= render "right_nav" %>
<% end %>
<div class="page-header" style="margin-top: 0;">
  <h4>
        <i class="icon-download icon-box"></i> <%= t("top_downloads") %>
  </h4>
</div>
<div id="songs">
  <% if @songs.empty? %>
      <p class="alert alert-warning"><%= t("song.no_songs_uploaded_yet") %></p>
  <% else %>
      <%= render @songs %>
  <% end %>
</div>





