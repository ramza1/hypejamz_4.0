jQuery(function(){
        jQuery("a[rel=photo_group]").fancybox({
            'transitionIn'		: 'elastic',
            'transitionOut'		: 'elastic',
            'speedIn'          : '600',
            'speedOut'   : '200',
            'titlePosition' 	: 'over',
